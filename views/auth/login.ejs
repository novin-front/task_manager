<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Document</title>
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/assets/fonts/fonts.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <link rel="stylesheet" href="/assets/css/custom.css" />
</head>

<body>
    <div id="wrapper">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-6">
                    <div class="card">
                        <div class="card-header text-center">
                            ورود
                        </div>
                        <div class="card-body">
                            <% if(error){ %>
                            <div class="alert alert-danger">
                                <p class="text-center">نام کاربری یا پسورد شما اشتباه است</p>
                            </div>
                            <% } %>
                            <div id="empty-m" class="alert alert-danger" style="display:none;">
                                <p class="text-center">لطفا مقادیر خالی را پر نمایید</p>
                            </div>
                            <form action="/auth/login" method="POST" id="form-login">
                                <div class="form-group">
                                    <label for="email">ایمیل</label>
                                    <input type="email" class="form-control" name="email" id="email" placeholder=""
                                        autocomplete="off" value="aa@gm.co">

                                </div>
                                <div class="form-group">
                                    <label for="password">کلمه عبور</label>
                                    <input type="password" class="form-control" name="password" id="password"
                                        autocomplete="off" placeholder="" value="123">
                                </div>
                                <button type="submit" id="submit-form" class="btn btn-success btn-block">ورود</button>
                            </form>
                            </br>
                            <div class="row justify-content-center">

                                <a href="/auth/register" class="btn btn-outline-primary btn-icon">
                                    <i class="material-icons">
                                        input
                                    </i>
                                    <span>عضویت سریع در سایت</span>
                                </a>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script>
        let inputs = document.querySelectorAll("input");
        let formLogin = document.querySelector("#form-login");
        let submitFrom = document.querySelector("#submit-form");
        let messageError = document.querySelector('#empty-m');
        submitFrom.addEventListener('click', function (e) {
            console.log(e);
            e.preventDefault();
            if (formEmpty(inputs) > 0) {
                messageError.style.display = "none";
                e.path[1].submit();

            }
            else {
                messageError.style.display = "block";
                console.log("form is no valid")
            }

        })
        function formEmpty(array) {
            let i = 0;
            array.forEach(element => {
                if (element.value != '') {
                    element.style.borderColor = "#e5e5e5";
                    i++;
                }
                else {
                    element.style.borderColor = "#ff1f1f";
                }

            });

            if (i === array.length) {
                return true
            } else {
                return false;
            }
        }

    </script>
    <script src="/assets/js/bootstrap.min.js"></script>

</body>

</html>